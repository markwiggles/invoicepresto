<table class="table">
    <thead>
        <th width=4%>Select</th>
        <th width=43%>Name</th>
        <th width=43%>Email</th>
        <th width=10%></th>
    </thead>

    <tbody>

        {{#each item in model}}
            {{#if item.id}}
                <tr>
                    <td>
                        {{view 'form-elements/radio-button'}}
                    </td>
                    <td>
                        {{item.name}}
                    </td>
                    <td>
                        {{item.email}}
                    </td>
                    <td>
                        {{#link-to this.editLink item}}{{fa-icon "edit"}}{{/link-to}}
                    </td>
                </tr>
            {{/if}}
        {{/each}}
    </tbody>

</table>
