<table class="table">
    <thead>
        <th width=4%>Select</th>
        <th width=43%>Name</th>
        <th width=43%>Description</th>
        <th width=10%></th>
    </thead>

    {{#each item in model}}
        {{#if item.id}}
            <tr>
                <td>
                    {{radio-button value=item.id checked=selectedNumber}}
                    <label>&nbsp;</label>
                </td>
                <td>
                    {{item.name}}
                </td>
                <td>
                    {{item.description}}
                </td>
                <td>
                    {{#link-to this.editLink item}}{{fa-icon "edit"}}{{/link-to}}
                </td>
            </tr>
        {{/if}}
    {{/each}}
    
</table>
