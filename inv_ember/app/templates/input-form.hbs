<label {{bind-attr for=view.inputId}}>{{view.label}}</label>
{{yield}}
<span class="help-inline">{{view.help}}</span>


{{#em-form model=model submit_button=false}}
    {{em-input property="name" placeholder="enter a name..."}} 
    {{em-input property="email" placeholder="email"}} 
    {{em-input property="phone" placeholder="phone"}}
    <input {{bind-attr disabled=isntValid}} type="submit" class="btn btn-primary" value="Add New">
{{/em-form}}
